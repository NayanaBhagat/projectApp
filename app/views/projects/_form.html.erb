
<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :start_date %><br />
    <%= f.date_select :start_date,:start_year => 1920, :end_year => 2022 %>
  </div>
  <div class="field">
    <%= f.label :end_date %><br />
    <%= f.date_select :end_date,:start_year => 1920, :end_year => 2022 %>
  </div>
  <div class="field">
    <%= f.label :user_name %><br />
    <%= select_tag 'user_name' ,  options_from_collection_for_select(User.all, 'id', 'fname', @project.users.map{ |j| j.id }), :multiple => true  %> 
  </div>
  <div class="actions">
    <%= f.submit class: 'button' %>
  </div>
<% end %>
