
<div class="row">
<div class="large-6 columns">
<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div >
    <%= f.label :fname %><br />
    <%= f.text_field :fname %>
  </div>
  <div >
    <%= f.label :lname %><br />
    <%= f.text_field :lname %>
  </div>
  <div >
    <%= f.label :empNo %><br />
    <%= f.number_field :empNo %>
  </div>
  <div >
    <%= f.label :dob %><br />
    <div class="small-6 large-2 columns">
    <%= f.date_select :dob,:start_year => 1920, :end_year => 2013 %>
    </div>
  </div>
  <div >
    <%= f.label :gender %><br />
    <%= f.radio_button :gender, 'Male'%>Male<br/>
    <%= f.radio_button :gender, 'Female' %>Female<br/></br>

  </div>
  <div>
    <%= f.label :address %><br />
    <%= f.text_area :address, :cols => "30", :rows => "3"  %>
  </div>
  <div >
    <%= f.label :hobbies %>:</br>
    <%= f.select :hobbies, [ 'Reading', 'Singing', 'Dancing'],  :multiple => true %></br>
  </br>
  </div>
  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "Sign up", class: 'button' %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
